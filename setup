SCRIPTS=$HOME/.scripts
if [ ! -e $SCRIPTS ]; then
    mkdir $SCRIPTS
fi

for filename in .bash_profile .bashrc .gvimrc .pylintrc .vimrc
do
    cp $filename $HOME
    echo 'cp '$filename $HOME
done

for filename in clean dim git-pull git-status grep- grub2-windows invert-display minify-js.py ssh-
do
    cp $filename $SCRIPTS
    chmod a+x $filename
    echo 'cp '$filename $SCRIPTS
done

rm -Rf ~/.vim
mkdir -p ~/.vim/autoload ~/.vim/bundle
curl -so ~/.vim/autoload/pathogen.vim https://raw.github.com/tpope/vim-pathogen/HEAD/autoload/pathogen.vim

cd ~/.vim/bundle
git clone https://github.com/vim-scripts/DirDiff.vim.git 
git clone https://github.com/kien/ctrlp.vim.git 
git clone https://github.com/klen/python-mode.git
git clone https://github.com/Raimondi/delimitMate.git

if [ -n "$1" ]; then
    sed -i 's/^workon crosscompute/workon $1/' .bashrc
fi
