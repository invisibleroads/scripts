SOURCE_EXTENSION=wma
TARGET_EXTENSION=mp3
if [ -z "$1" ]
then
    echo 'Please specify a filename pattern'
else
    for path in $1;
    do
        oldFileName=$(basename "$path")
        newFileName=${oldFileName%.$SOURCE_EXTENSION}.$TARGET_EXTENSION
        ffmpeg -i "$path" -ab 128k -ac 2 -ar 44100 "$HOME/Downloads/${newFileName}"
    done
fi
